generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  email          String
  firstName      String?
  lastName       String?
  address        String
  zipcode        String
  phoneNumber    String
  SupportTickets SupportTicket[]
  marketingOptin Boolean
}

enum PaymentMethod {
  ONLINE
  ONSITE
}

model Answer {
  id              Int       @id @default(autoincrement())
  answer          String    @db.VarChar(256)

  questionId     Int
  question       Question @relation(fields: [questionId], references: [id])
  nextQuestionId Int?
  nextQuestion   Question? @relation("NextQuestion", fields: [nextQuestionId], references: [id])
}

model Question {
  id        Int     @id @default(autoincrement())
  question  String  @db.VarChar(256)
  answers   Answer[]
  nextAnswers Answer[] @relation("NextQuestion")
}

model SupportTicketAnswer {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  questionId Int
  answerId   Int
}

model SupportTicket {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  author        Lead          @relation(fields: [authorId], references: [id])
  authorId      Int
  paymentMethod PaymentMethod
}
